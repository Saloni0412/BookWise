<div class="container">
  <div class="form-container">
    <i class="fas fa-sign-in-alt"></i>
    <h2>Login</h2>
    <form id="login-form">
      <input type="text" id='login-user' placeholder="Username" required>
      <input type="password" id='login-pass' placeholder="Password" required>
      <button type="submit" class="login-btn">Login <i class="fas fa-arrow-right "></i>
      </button>
    </form>
  </div>
  <div class="form-container">
    <i class="fas fa-user"></i>
    <h2>Create Account!</h2>
    <form id="signup-form2">
      <input type="text" id='signup-user' placeholder="Username" required>
      <input type="password" id='signup-pass' placeholder="Password" required>
      <button type="submit" class="login-btn">Sign Up <i class="fas fa-arrow-right "></i>
      </button>
    </form>
  </div>
</div>
<script src="./js/login.js"></script>
<script src="./js/signup.js"></script>